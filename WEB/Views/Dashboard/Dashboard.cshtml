
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero__item set-bg" data-setbg="img/hero/banner.jpg" style="background-color:gray">
    <div class="hero__text">
        <span>DELL VOSTRO 3568 i3</span>
        <h2>Laptop DELL<br />Dòng Vostro phổ thông</h2>
        <p>Hiện đang có giảm giá ở shop</p>
        <a href="#" class="primary-btn">MUA NGAY</a>
    </div>
</div>

<div class="container">
    <div class="row featured__filter">
        @foreach(var item in ViewBag.ProductLoad)
        {
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
            <div class="featured__item">
                <div class="featured__item__pic set-bg" data-setbg="@item.Image" style="background-color:pink">
                    <ul class="featured__item__pic__hover">
                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="featured__item__text">
                    <h6><a href="/Product/Detail/@item.ID">@item.Name</a></h6>
                    <h5>@item.Price VND</h5>
                </div>
            </div>
        </div>
        }
    </div>
</div>

